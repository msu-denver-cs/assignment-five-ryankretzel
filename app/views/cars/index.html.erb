<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Vin</th>
      <th>Make</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.VIN %></td>
        <td><%= car.make.name %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag(search_cars_url, method: "get") do%>
  <%= label_tag(:query, "Search for car:")%>
  <%= text_field_tag(:query)%>
  <%= submit_tag("Search")%>
<% end %>

<%= link_to 'New Car', new_car_path %>
<%= link_to 'Makes', makes_path%>
<%= link_to 'Parts', parts_path%>